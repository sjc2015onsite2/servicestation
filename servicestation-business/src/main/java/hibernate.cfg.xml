<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>       
  <session-factory>
  
    <!-- Database connection settings -->
    <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="connection.url">jdbc:mysql://localhost:3306/servicestation</property>
    <property name="connection.username">root</property>
    <property name="connection.password">root</property>
    

    <!-- JDBC connection pool (use the built-in) -->
    <property name="connection.pool_size">1</property>
    <property name="current_session_context_class">thread</property>
    <property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
    <property name="show_sql">true</property>
    <property name="format_sql">true</property>
  
	<mapping class="com.expositds.sjc.servicestation.app.repository.entity.AffilateEntity" />
	<mapping class="com.expositds.sjc.servicestation.app.repository.entity.AffilateProfileEntity" />
	<mapping class="com.expositds.sjc.servicestation.app.repository.entity.ClientNotificationEntity" />
	<mapping class="com.expositds.sjc.servicestation.app.repository.entity.CommentEntity" />
	<mapping class="com.expositds.sjc.servicestation.app.repository.entity.CredentialEntity" />
	<mapping class="com.expositds.sjc.servicestation.app.repository.entity.MarkEntity" />
	<mapping class="com.expositds.sjc.servicestation.app.repository.entity.OrderEntity" />
	<mapping class="com.expositds.sjc.servicestation.app.repository.entity.PartEntity" />
	<mapping class="com.expositds.sjc.servicestation.app.repository.entity.PartOrderEntity" />
	<mapping class="com.expositds.sjc.servicestation.app.repository.entity.PersonEntity" />
	<mapping class="com.expositds.sjc.servicestation.app.repository.entity.ServiceEntity" />
	<mapping class="com.expositds.sjc.servicestation.app.repository.entity.SiteAggregatorEntity" />
	<mapping class="com.expositds.sjc.servicestation.app.repository.entity.SiteUserEntity" />
	<mapping class="com.expositds.sjc.servicestation.app.repository.entity.StationEntity" />
	<mapping class="com.expositds.sjc.servicestation.app.repository.entity.StationProfileEntity" />
	<mapping class="com.expositds.sjc.servicestation.app.repository.entity.MechanicProfileEntity" />
		       
  
  </session-factory> 
 
</hibernate-configuration>